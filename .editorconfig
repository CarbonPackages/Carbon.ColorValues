# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[*.yaml]
indent_size = 2

[*.js]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = 80
indent_size = 2

[Makefile]
indent_style = tab
